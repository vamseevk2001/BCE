<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".more_frag">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintEnd_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        app:titleTextColor="@color/white">


        <!-- <ImageView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_gravity="end"
             android:padding="10dp"
             android:src="@drawable/ic_search_white" />-->

    </androidx.appcompat.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbar">
    <Button
        android:id="@+id/tenderList"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="tender list"
        android:textColor="@color/blue"
        android:gravity="start|center_vertical"
        android:drawableRight="@drawable/ic_baseline_navigate_next_24"
        android:backgroundTint="@color/white"
         />

        <Button
            android:id="@+id/helpDesk"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Help Desk"
            android:textColor="@color/blue"
            android:gravity="start|center_vertical"
            android:drawableRight="@drawable/ic_baseline_navigate_next_24"
            android:backgroundTint="@color/white"
            />

        <Button
            android:id="@+id/memberAsk"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Member ask"
            android:textColor="@color/blue"
            android:gravity="start|center_vertical"
            android:drawableRight="@drawable/ic_baseline_navigate_next_24"
            android:backgroundTint="@color/white"
            />

        <Button
            android:id="@+id/logout"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Logout"
            android:textColor="@color/blue"
            android:gravity="start|center_vertical"
            android:drawableRight="@drawable/ic_baseline_exit_to_app_24"
            android:backgroundTint="@color/white"
            />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>